<Window x:Class="WPFTest.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center">
            <Label Margin="8">User:</Label>
            <TextBox Width="200"/>
        </WrapPanel>
        <WrapPanel Grid.Row="3" HorizontalAlignment="Center">
            <Label Margin="8">Password:</Label>
            <TextBox Width="200"/>
        </WrapPanel>
        <WrapPanel Grid.Row="4" HorizontalAlignment="Center" Margin="16" >
            <Button  Width="100" Margin="5" Click="Loggining">Вход</Button>
            <Button Width="100" Margin="5" Click="Registration">Регистрация</Button>
        </WrapPanel>
    </Grid>


</Window>
